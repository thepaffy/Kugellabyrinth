<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.thepaffy.kugellabyrinth"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="org.thepaffy.kugellabyrinth.StartActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.thepaffy.kugellabyrinth.PlayActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_play"
            android:theme="@style/FullscreenTheme"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="org.thepaffy.kugellabyrinth.HighscoreActivity"
            android:label="@string/title_activity_highscore"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="org.thepaffy.kugellabyrinth.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>
